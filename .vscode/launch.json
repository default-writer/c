    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) list",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/tests/main",
            "preLaunchTask": "gcc-build",
            "initCommands":["settings set target.disable-aslr false"]
        },
        {
            "name": "(gdb) list",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "gcc-build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "(lldb) list-light",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/tests/main-light",
            "preLaunchTask": "gcc-build-light",
            "initCommands":["settings set target.disable-aslr false"]
        },
        {
            "name": "(gdb) list-light",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/main-light",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "gcc-build-light",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}